<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#080A0C"
    tools:context=".Starting.StartingPage_Activity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/wallet"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Wallet Setup"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="30sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_seedPhrase"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_btn"
        android:backgroundTint="#202832"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:text="Import Using Seed Phrase"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_newWallet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/gradient_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Create a New Wallet"/>

</LinearLayout>