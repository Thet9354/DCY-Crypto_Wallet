<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#080A0C"
    android:orientation="vertical"
    tools:context=".Starting.WriteDownSeedPhrase_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_icon" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_toRightOf="@+id/btn_back"
                    android:src="@drawable/wallet_progress2" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtView_seedPhrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write Down Your Seed Phrase"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is your seed phrase. Write it down on a paper \nand keep it in a safe place. You'll be asked to re-enter \nthis phrase (in order) on the next step."
                android:textColor="#8FA2B7"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_actualSeedPhrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/black"
                card_view:cardCornerRadius="15dp"
                android:layout_marginTop="30dp"
                android:elevation="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:orientation="vertical"
                    android:elevation="25dp"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_2"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1. future"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_3"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:layout_alignParentEnd="true"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7. exit"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_4"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2. user"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_5"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:layout_alignParentEnd="true"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8. enact"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_6"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3. abuse"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_7"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:layout_alignParentEnd="true"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9. drum"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_8"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4. bubble"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_9"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:layout_alignParentEnd="true"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10. frequent"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_10"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5. disagree"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_11"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:layout_alignParentEnd="true"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="11. target"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_12"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6. yard"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_13"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/cardbg"
                            card_view:cardCornerRadius="15dp"
                            android:layout_alignParentEnd="true"
                            android:elevation="25dp"
                            card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:elevation="25dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/txtView_seedWord12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12. organ"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imgView_blurSeedPhrase"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/seedphrase" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_createNewWallet"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/gradient_btn"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:text="Next"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>